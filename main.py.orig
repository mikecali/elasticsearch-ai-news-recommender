    def run_demo(self) -> None:
        """Run a complete system demonstration"""
        try:
            print("\nğŸš€ Starting News Recommendation Engine ML Demo...")
            
            # Setup system
            print("\nğŸ”§ Setting up system...")
            if not self.setup_system():
                print("âŒ System setup failed")
                return
            
            # Display status
            self.display_system_status()
            
            # Crawl and index news
            print("\nğŸ“° Crawling and indexing news with ML vectorization...")
            articles_count = self.crawl_and_index_news()
            if articles_count > 0:
                print(f"âœ… Successfully indexed {articles_count} articles with ML vectors")
            else:
                print("âš ï¸  No articles were indexed")
            
            # Simulate user activity
            print("\nğŸ­ Simulating user reading activity...")
            if self.simulate_user_activity():
                print("âœ… User activity simulated successfully")
            else:
                print("âš ï¸  User activity simulation had issues")
            
            # Generate recommendations for all users
            print("\nğŸ¯ Generating AI-powered recommendations...")
